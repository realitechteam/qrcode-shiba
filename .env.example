# ============================================
# QRCode-Shiba Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# For local development with Docker, copy to .env.local
# ============================================

# ----------------
# General
# ----------------
NODE_ENV=development

# ----------------
# Database (PostgreSQL)
# ----------------
# Local Docker: postgresql://postgres:postgres@localhost:5432/qrcode_shiba?schema=public
# Production: Your production database URL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/qrcode_shiba?schema=public

# ----------------
# Redis
# ----------------
# Local Docker: redis://localhost:6379
# Production: Your Redis URL
REDIS_URL=redis://localhost:6379

# ----------------
# JWT Secrets
# ----------------
# IMPORTANT: Generate strong random strings for production!
# Example: openssl rand -base64 32
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# ----------------
# OAuth - Google (Backend)
# ----------------
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# ----------------
# Firebase (Frontend - NEXT_PUBLIC_*)
# ----------------
# Get from: Firebase Console > Project Settings > Your Apps
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abc123
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ----------------
# Service URLs
# ----------------
# Local Docker defaults
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_AUTH_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_QR_API_URL=http://localhost:3002/api/v1
NEXT_PUBLIC_REDIRECT_URL=http://localhost:3003
NEXT_PUBLIC_PAYMENT_API_URL=http://localhost:3004/api/v1
REDIRECT_URL=http://localhost:3003

# ----------------
# Email - Resend (Recommended)
# ----------------
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxx
RESEND_FROM_EMAIL=QRCode-Shiba <noreply@yourdomain.com>
MAGIC_LINK_SECRET=your-magic-link-secret

# ----------------
# Payment - SePay (VietQR)
# ----------------
# Get from: https://my.sepay.vn/
SEPAY_API_TOKEN=your-sepay-api-token
SEPAY_WEBHOOK_SECRET=your-webhook-secret
SEPAY_BANK_CODE=VPBANK
SEPAY_ACCOUNT_NO=your-bank-account-number
